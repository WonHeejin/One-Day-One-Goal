{{>layout/header}}
<!-- Sortable Assets-->

<link rel="stylesheet" type="text/css" href="/jquery-sortable-js/st/theme.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<h1>오늘의 목표</h1>

<div id="simple-list" class="row">
    <h4 class="col-12">Simple list example</h4>
    <div id="goals_table" class="list-group col">
        <div class="list-group-item" style="background:gray;">목표</div>
        <div class="list-group-item">
            <input type="text" id="new-goal" placeholder="ex) 8시에 일어나기"/>
                <div class="list-button">
                    <button type="button" class="btn btn-outline-success" id="btn-add">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                </div>
        </div>
        <div class="list-group-item goal">Item 2
            <div class="list-button">
                <button type="button" class="btn btn-outline-danger delete">
                    <i class="bi bi-trash-fill"></i>
                </button>
            </div>
        </div>
        <div class="list-group-item goal">Item 3
            <div class="list-button">
                <button type="button" class="btn btn-outline-danger delete">
                    <i class="bi bi-trash-fill"></i>
                </button>
            </div>
        </div>
    </div>
    <div id="success_table" class="list-group col">
        <div class="list-group-item" style="background:green;">성공</div>
        <div class="list-group-item goal">Item 1</div>
        <div class="list-group-item goal">Item 2</div>
    </div>
    <div id="fail_table" class="list-group col">
        <div class="list-group-item" style="background:red;">실패</div>
        <div class="list-group-item goal">Item 1</div>
        <div class="list-group-item goal">Item 2</div>
    </div>
</div>
{{>layout/footer}}